/* 新建智能体页面样式 */
.container {
  padding: 40rpx;
}
.agent-detail-container {
  background: #f7f8fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.agent-avatar-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  margin-top: 24rpx;
}
.agent-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #e6e6e6;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.form-area {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  padding: 40rpx 32rpx 32rpx 32rpx;
  margin-bottom: 32rpx;
}
.form-group {
  margin-bottom: 40rpx;
}
.label {
  display: block;
  margin-bottom: 16rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}
.input {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 16rpx 0;
  font-size: 32rpx;
  margin-bottom: 8rpx;
  background: #f8f9fb;
}
.gender-picker {
  background: #f8f9fb;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 16rpx 0;
  font-size: 32rpx;
}
.gender-value {
  color: #0052d9;
  font-size: 32rpx;
  padding-left: 8rpx;
}
.level {
  font-size: 30rpx;
  color: #0052d9;
  font-weight: 600;
  padding: 8rpx 0;
}
.device-btn {
  width: 100%;
  background: #40a9ff;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}
.device-icon-area {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.device-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 8rpx;
}
.device-label {
  color: #52c41a;
  font-size: 28rpx;
}
.save-btn {
  width: 100%;
  background: linear-gradient(90deg, #0052d9 0%, #40a9ff 100%);
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,82,217,0.08);
}
.device-modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.device-modal {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  min-width: 400rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  align-items: stretch;
}
.device-modal-btns {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  gap: 16rpx;
}
.cancel-btn,
.ok-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #333;
  border: 1px solid #ddd;
}

.ok-btn {
  background: #007aff;
  color: #fff;
  border: 1px solid #ddd;
}
