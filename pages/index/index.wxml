<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    
    <view class="agent-list">
      <block wx:if="{{agents.length === 0}}">
        <text class="empty">暂无智能体</text>
      </block>
      <block wx:for="{{agents}}" wx:key="index">
        <movable-area class="agent-movable-area">
          <movable-view class="agent-movable-view" direction="horizontal" x="{{movableX[index]}}" damping="40" friction="2" out-of-bounds="true" data-index="{{index}}" bindchange="onMovableChange" bindtouchend="onMovableTouchEnd" style="width:100%;height:180rpx;background:transparent;">
            <view class="agent-item-row" bindtap="onEditAgent" data-index="{{index}}">
              <image class="agent-item-avatar" src="/assets/tabbar/home.png" mode="aspectFill" />
              <view class="agent-item-info">
                <view class="agent-item-name">{{item.name}}</view>
                <view class="agent-item-meta">昵称：{{item.nickname || '未设置'}} | 年龄：{{item.age || '未知'}} </view>
                <view class="agent-item-meta">会员等级：{{item.level || '普通免费'}}</view>
              </view>
            </view>
          </movable-view>
          <view wx:if="{{showDeleteIndex === index}}" class="delete-btn-slide" style="right:0;top:0;position:absolute;z-index:10;height:180rpx;" data-index="{{index}}" bindtap="onDeleteAgent">删除</view>
        </movable-area>
      </block>
    </view>
    <button class="create-btn" bindtap="onCreateAgent">＋ 新建智能体</button>
  </view>
</scroll-view>
